pipeline {
    agent any

    environment {
        // ID du Credential Jenkins pour DockerHub (Nom d'utilisateur/Mot de passe)
        DOCKERHUB_CREDENTIALS = 'jenkins_dhia'
        // Nom de l'image Docker
        IMAGE_NAME = "dhiaayadi/student"
        IMAGE_TAG = "latest"
    }

    tools {
        // Assurez-vous que 'jdk17' et 'maven' sont configurés dans les Outils Globaux de Jenkins
        jdk 'jdk17'
        maven 'maven'
    }

    stages {

        stage('Checkout from GitHub') {
            steps {
                // S'assure que l'URL est correcte (avec le trait d'union '-'), 
                // et utilise la branche 'main'
                git branch: 'main',
                    url: 'https://github.com/dhiaayadi/Student-Management.git'
            }
        }

        stage('Build Maven') {
            steps {
                // Utilisation de 'bat' pour exécuter les commandes Maven sur Windows
                bat 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Utilisation de 'bat' pour les commandes Docker
                // Note : Vous devez avoir Docker installé sur l'agent Windows.
                bat "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {
                    // Les commandes de connexion et de push doivent utiliser 'bat'
                    // L'injection de mot de passe via echo/pipe peut être tricky en BAT,
                    // mais cela fonctionne souvent si l'agent a accès au 'docker' CLI.
                    bat 'echo %DOCKERHUB_PASS% | docker login -u %DOCKERHUB_USER% --password-stdin'
                    bat "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
}
pipeline {
    agent any

    environment {
        // --- VARIABLES SONARQUBE ---
        // Remplacer 'sonar_login_token' par l'ID de votre credential Jenkins (Secret Text)
        SONAR_CREDENTIALS_ID = 'devops_sonar'
        // ---------------------------
        
        // ID du Credential Jenkins pour DockerHub
        DOCKERHUB_CREDENTIALS = 'jenkins_dhia'
        // Nom de l'image Docker
        IMAGE_NAME = "dhiaayadi/student"
        IMAGE_TAG = "latest"
    }

    tools {
        // Ces outils doivent être configurés dans 'Gérer Jenkins -> Outils Globaux'
        jdk 'jdk17'
        maven 'maven'
    }

    stages {

        stage('Checkout from GitHub') {
            steps {
                // CORRIGÉ : Utilisation du trait d'union '-' dans l'URL pour correspondre à GitHub
                git branch: 'main',
                    url: 'https://github.com/dhiaayadi/Student-Management.git' 
            }
        }

        stage('Build Maven') {
            steps {
                // withEnv injecte la variable JAVA_HOME à partir de la configuration globale de 'jdk17'
                withEnv(["JAVA_HOME=${tool 'jdk17'}"]) {
                    // Utilisation de 'bat' pour exécuter les commandes sur Windows
                    bat 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Sonar Analysis') {
            steps {
                // withSonarQubeEnv('SonarQubeServer') : Doit correspondre au nom configuré dans Jenkins
                withSonarQubeEnv('SonarQubeServer') { 
                    withCredentials([string(credentialsId: 'devops_sonar', variable: 'SONAR_LOGIN')]) {
                        withEnv(["JAVA_HOME=${tool 'jdk17'}"]) {
                            // bat est utilisé pour l'exécution sur Windows
                            // -Dsonar.login=%SONAR_LOGIN% : Utilise la variable Batch pour le token
                            bat "mvn clean verify sonar:sonar -Dsonar.projectKey=student -Dsonar.login=%SONAR_LOGIN%"
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {
                    // Les commandes de connexion et de push doivent utiliser 'bat'
                    bat 'echo %DOCKERHUB_PASS% | docker login -u %DOCKERHUB_USER% --password-stdin'
                    bat "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
}
pipeline {
    agent any

    environment {
        // CHANGÉ : Utilisation du nouvel ID de credential DockerHub
        DOCKERHUB_CREDENTIALS = 'jenkins_dhia'
        // CHANGÉ : Utilisation du nouvel utilisateur DockerHub (dhiaayadi)
        IMAGE_NAME = "dhiaayadi/student"
        IMAGE_TAG = "latest"
    }

    tools {
        jdk 'jdk17'
        maven 'maven'
    }

    stages {

        stage('Checkout from GitHub') {
            steps {
                // CHANGÉ : Utilisation de la branche 'main' au lieu de 'master'
                git branch: 'main',
                    url: 'https://github.com/dhiaayadi/Student-Management.git'
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKERHUB_USER',
                    passwordVariable: 'DOCKERHUB_PASS'
                )]) {

                    sh 'echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin'
                    sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
}